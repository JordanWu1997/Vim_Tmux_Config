# Credit: https://github.com/navahas/.dotfiles/blob/master/tmux/.tmux.conf

# Statusline
set -g status on
set -g status-position bottom
set -g status-justify right
set -g status-bg default
set -g status-style "fg=#569CD6"

# Left statusline
set -g status-left-length 50
set -g status-left " #[fg=#5A5A5A]î¯ˆ session:#[fg=#DCDCAA,bg=default] #S"

# Central window statusline
setw -g window-status-separator ''
setw -g window-status-format " #[fg=#5A5A5A,bg=default]#I:#[fg=#default,bg=#DCDCAA]#W"
setw -g window-status-current-format " #[fg=#DCDCAA,bg=default]#I:#[fg=#5A5A5A,bg=#default]#W"

# Right statusline
set -g status-right " "

# Pane border statusline
set -g pane-border-style "fg=black"
set -g pane-active-border-style "fg=black"
set -g pane-border-lines "single"
set -g window-style "fg=white"

# Copy mode styling
set -g mode-style "fg=white,bg=#363636"

# Popup styling
set -gq popup-border-lines rounded
set -gq popup-border-style "fg=#545454,bg=default"
